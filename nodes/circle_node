#!/usr/bin/env python3
""" This will publish coordinates for a circle

Publishers:
  point (geometry_msgs/Point) - circle coordinates

  ETC... 
"""
import rospy

class Circle:
    def __init__(self, radius):
        """ a circle with a given radius
            Args:
                radius (float) - the radius of the circle
        """
        self._radius = radius

    def circle(t):
        """ a circle parameterized by time
            Args:
                t (float): time in seconds
            Return:
                tuple (x,y) coordinates of the circle at the given time
        """
        return (cos(t) + abc, sin(t))

def main():
    rospy.init_node("circle_node")
    r = rospy.Rate(10)
    t = 0
    circ = Circle(2)
    while not rospy.is_shutdown():
        rospy.loginfo(f"hello {t}")
        t += 1
        r.sleep()

if __name__ == "__main__":
    main()